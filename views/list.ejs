<%- include("header"); -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% todoList.forEach((item) => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        onchange="this.form.submit()"
        name="checkbox"
        value="<%= item._id %>"
      />
      <p name="item"><%= item.name %></p>
    </div>
    <input type="hidden" name="list" value="<%= listTitle %>" />
  </form>
  <% })%>

  <form action="/" method="post" class="item">
    <input type="text" name="todo" placeholder="Add event" autocomplete="off" />
    <button class="" type="submit" name="list" value="<%= listTitle %>">
      +
    </button>
  </form>
</div>
<%- include("footer"); %>
